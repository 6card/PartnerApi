{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        //"types": ["node", "jquery", "semantic-ui"],
        "typeRoots": [
            // add path to @types
            "../node_modules/@types"
        ]
    }
}